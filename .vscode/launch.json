{
    "configurations": [
        { // simple attach to running container
            "name": "Python Attach",
            "preLaunchTask": "docker-compose up web",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/server/",
                    "remoteRoot": "/src/server"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1"
        },
    ]
}